{
  "compilerOptions": {
    "target": "ES2020", // Or a newer ECMAScript version like ES2021, ES2022
    "module": "commonjs", // Standard for Node.js
    "rootDir": "./src", // Where your TypeScript source files will live
    "outDir": "./dist", // Where compiled JavaScript will be output
    "esModuleInterop": true, // Enables interoperability between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true, // Ensures consistent file naming
    "strict": true, // Enables all strict type-checking options
    "skipLibCheck": true, // Skip type checking of declaration files
    "resolveJsonModule": true // Allows importing JSON files
  },
  "include": ["src/**/*"], // Which files TypeScript should check
  "exclude": ["node_modules", "dist"] // Which files/folders to ignore
}